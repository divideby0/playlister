<?xml version="1.0" encoding="UTF-8"?>
<solver>
    <!--<environmentMode>PRODUCTION</environmentMode>-->
    <!--<environmentMode>FAST_ASSERT</environmentMode>-->
    <!--<environmentMode>FULL_ASSERT</environmentMode>-->
    <solutionClass>com.github.divideby0.spotfire.domain.SpotfirePlaylist</solutionClass>
    <entityClass>com.github.divideby0.spotfire.domain.PlaylistTrack</entityClass>
    <!--<entityClass>com.github.divideby0.spotfire.domain.FirstTrack</entityClass>-->

    <scoreDirectorFactory>
        <scoreDrl>com/github/divideby0/spotfire/track-order.drl</scoreDrl>
        <scoreDrl>com/github/divideby0/spotfire/artist-and-genre-rules.drl</scoreDrl>
        <scoreDrl>com/github/divideby0/spotfire/key-rules.drl</scoreDrl>
        <scoreDrl>com/github/divideby0/spotfire/tempo-rules.drl</scoreDrl>
        <!--<initializingScoreTrend>ONLY_DOWN</initializingScoreTrend>-->
    </scoreDirectorFactory>

    <termination>
        <secondsSpentLimit>7200</secondsSpentLimit>
        <bestScoreLimit>[0/0/0/0]hard/[0/0/-1000/-1000/-1000]soft</bestScoreLimit>
    </termination>
    <!--<constructionHeuristic>-->
        <!--<queuedEntityPlacer>-->
            <!--<entitySelector id="firstTrackSelector">-->
                <!--<entityClass>com.github.divideby0.spotfire.domain.FirstTrack</entityClass>-->
            <!--</entitySelector>-->
        <!--</queuedEntityPlacer>-->
    <!--</constructionHeuristic>-->
    <constructionHeuristic>
        <constructionHeuristicType>FIRST_FIT_DECREASING</constructionHeuristicType>
        <!--&lt;!&ndash;&lt;!&ndash;<queuedEntityPlacer>&ndash;&gt;&ndash;&gt;-->
            <!--&lt;!&ndash;&lt;!&ndash;<entitySelector id="playlistTrackSelector">&ndash;&gt;&ndash;&gt;-->
                <!--&lt;!&ndash;&lt;!&ndash;<entityClass>com.github.divideby0.spotfire.domain.FollowupTrackClass>&ndash;&gt;&ndash;&gt;-->
            <!--&lt;!&ndash;&lt;!&ndash;</entitySelector>&ndash;&gt;&ndash;&gt;-->
        <!--&lt;!&ndash;&lt;!&ndash;</queuedEntityPlacer>&ndash;&gt;&ndash;&gt;-->
    </constructionHeuristic>

    <localSearch>
        <termination>
            <unimprovedStepCountLimit>200</unimprovedStepCountLimit>
        </termination>
        <unionMoveSelector>
            <!--<cacheType>PHASE</cacheType>-->
            <selectionOrder>RANDOM</selectionOrder>
            <changeMoveSelector/>
            <swapMoveSelector/>
        </unionMoveSelector>
        <acceptor>
            <simulatedAnnealingStartingTemperature>[1/4/4/4]hard/[2/100/2/1000/1000]soft</simulatedAnnealingStartingTemperature>
            <entityTabuRatio>0.05</entityTabuRatio>
            <!--<valueTabuSize>50</valueTabuSize>-->
        </acceptor>
        <forager>
            <acceptedCountLimit>4</acceptedCountLimit>
        </forager>
    </localSearch>
</solver>