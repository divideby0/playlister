<?xml version="1.0" encoding="UTF-8"?>
<solver>
    <environmentMode>PRODUCTION</environmentMode>
    <!--<environmentMode>FULL_ASSERT</environmentMode>-->
    <!--<environmentMode>FAST_ASSERT</environmentMode>-->
    <solutionClass>com.github.divideby0.playlister.domain.Playlist</solutionClass>
    <entityClass>com.github.divideby0.playlister.domain.PlaylistAssignment</entityClass>

    <scoreDirectorFactory>
        <scoreDrl>com/github/divideby0/playlister/scoreRules.drl</scoreDrl>
    </scoreDirectorFactory>

    <termination>
        <secondsSpentLimit>600</secondsSpentLimit>
        <bestScoreLimit>[0/0/0/0]hard/[0/0/0/0]soft</bestScoreLimit>
    </termination>
    <constructionHeuristic>
        <termination>
            <secondsSpentLimit>150</secondsSpentLimit>
        </termination>
        <constructionHeuristicType>FIRST_FIT_DECREASING</constructionHeuristicType>
    </constructionHeuristic>
    <localSearch>
        <termination>
            <unimprovedStepCountLimit>100</unimprovedStepCountLimit>
        </termination>
        <unionMoveSelector>
            <cacheType>PHASE</cacheType>
            <selectionOrder>RANDOM</selectionOrder>
            <changeMoveSelector/>
            <swapMoveSelector/>
        </unionMoveSelector>
        <acceptor>
            <simulatedAnnealingStartingTemperature>[8/4/4/4]hard/[10/10/10/1000]soft</simulatedAnnealingStartingTemperature>
            <!--<entityTabuRatio>0.05</entityTabuRatio>-->
            <!--<valueTabuSize>50</valueTabuSize>-->
        </acceptor>
        <forager>
            <acceptedCountLimit>16</acceptedCountLimit>
        </forager>
    </localSearch>
</solver>